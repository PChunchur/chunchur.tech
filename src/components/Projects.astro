---
import Section from "./Section.astro"
const PROJECTS = [
 
   
    {
        title: "",
        issuer: "Coming soon",
        date: "2024",
        //link: "",
        image: "/12.png",
    },

]
---

<Section>
	<div class="flex justify-between pb-4">
		<p class="text-xl font-bold">Projects</p>
	</div>
	<div class="flex flex-col pb-4 items-start justify-start gap-12 mt-4">
        {
            PROJECTS.map((certification) => (
                <div class="flex flex-row justify-between w-full items-start">
                        <img src={certification.image} alt={certification.title} class="w-48" />
                        <div class="w-1/2">
                            <p class="text-lg font-bold">{certification.title}</p>
                            <p class="text-sm text-gray-500">{certification.issuer}, {certification.date}</p>
                            {/* <a href={certification.link} class="text-sm text-blue-500 hover:underline">View Certificate</a> */}
                        </div>
                </div>
            ))
        }
	</div>
</Section>